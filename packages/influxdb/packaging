# abort script on any command that exits with a non zero value
set -e

tar xvfz influxdb_1.2.4/influxdb-1.2.4_linux_amd64.tar.gz

pushd influxdb-1.2.4-1
  cp usr/bin/influxd $BOSH_INSTALL_TARGET
  cp usr/bin/influx $BOSH_INSTALL_TARGET
popd

chmod +x $BOSH_INSTALL_TARGET/influxd
chmod +x $BOSH_INSTALL_TARGET/influx

